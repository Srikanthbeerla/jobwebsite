<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Posted Jobs</title>
  <!-- Bootstrap CSS -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container">
  
    <h2>Manage Jobs</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Job Title</th>
          <th>Total Vacancy</th>
          <th>Salary</th>
          <th>Qualification</th>
          <th>Skills</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
      <% res1.forEach(function (jobs){ %>

    
          <tr>
            <td><%= jobs.job_title %></td>
            <td><%= jobs.total_vacancy %></td>
            <td><%= jobs.salary %></td>
            <td><%= jobs.qualification %></td>
            <td><%= jobs.skills %></td>
            <td>
               <form action="/managejobs" method="post">
                <input type="hidden" name="id" value="<%= jobs.id %>">
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <a href="/views/Employer-dashboard.ejs" class="btn btn-primary">Back</a>
    
  </div>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
